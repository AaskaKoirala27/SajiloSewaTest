<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Signup - Fix Sewa</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .signup-container {
      max-width: 1000px;
      margin: 0 auto;
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    .signup-header {
      background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), 
                  url('/images/hero-tools.jpg') center/cover no-repeat;
      color: white;
      text-align: center;
      padding: 60px 20px;
    }

    .signup-header h1 {
      font-size: 3rem;
      margin-bottom: 15px;
      font-weight: 700;
    }

    .signup-header p {
      font-size: 1.2rem;
      opacity: 0.9;
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    .role-selection {
      padding: 50px 20px;
      text-align: center;
    }

    .role-selection h2 {
      font-size: 2.2rem;
      color: #374151;
      margin-bottom: 30px;
      font-weight: 600;
    }

    .role-cards {
      display: flex;
      gap: 30px;
      justify-content: center;
      flex-wrap: wrap;
      margin-bottom: 40px;
    }

    .role-card {
      background: white;
      border: 3px solid #e5e7eb;
      border-radius: 15px;
      padding: 30px;
      width: 280px;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
    }

    .role-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .role-card.selected {
      border-color: #0dc16f;
      background: #f0fdf4;
      box-shadow: 0 10px 30px rgba(13, 193, 111, 0.2);
    }

    .role-card.selected::before {
      content: 'âœ“';
      position: absolute;
      top: 15px;
      right: 15px;
      background: #0dc16f;
      color: white;
      width: 25px;
      height: 25px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      font-size: 14px;
    }

    .role-icon {
      font-size: 3rem;
      color: #0dc16f;
      margin-bottom: 20px;
    }

    .role-title {
      font-size: 1.5rem;
      color: #374151;
      margin-bottom: 15px;
      font-weight: 600;
    }

    .role-description {
      color: #6b7280;
      line-height: 1.6;
      font-size: 0.95rem;
    }

    .signup-form {
      padding: 0 50px 50px;
      max-width: 600px;
      margin: 0 auto;
      display: none;
    }

    .signup-form.active {
      display: block;
    }

    .form-header {
      text-align: center;
      margin-bottom: 30px;
    }

    .form-header h3 {
      font-size: 2rem;
      color: #374151;
      margin-bottom: 10px;
      font-weight: 600;
    }

    .form-header p {
      color: #6b7280;
      font-size: 1.1rem;
    }

    .form-group {
      margin-bottom: 25px;
    }

    .form-group label {
      display: block;
      margin-bottom: 8px;
      color: #374151;
      font-weight: 600;
      font-size: 0.95rem;
    }

    .form-group input,
    .form-group select {
      width: 100%;
      padding: 15px;
      border: 2px solid #e5e7eb;
      border-radius: 10px;
      font-size: 1rem;
      transition: all 0.3s ease;
      background: #f9fafb;
    }

    .form-group input:focus,
    .form-group select:focus {
      outline: none;
      border-color: #0dc16f;
      background: white;
      box-shadow: 0 0 0 3px rgba(13, 193, 111, 0.1);
    }

    .form-group input::placeholder {
      color: #9ca3af;
    }

    .submit-btn {
      width: 100%;
      padding: 15px;
      background: #0dc16f;
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 1.1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      margin-top: 10px;
    }

    .submit-btn:hover {
      background: #0aa556;
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(13, 193, 111, 0.3);
    }

    .submit-btn:active {
      transform: translateY(0);
    }

    .form-footer {
      text-align: center;
      margin-top: 30px;
    }

    .form-footer a {
      color: #0dc16f;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    .form-footer a:hover {
      color: #0aa556;
      text-decoration: underline;
    }

    .error-message {
      background: #fef2f2;
      color: #dc2626;
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 25px;
      border: 1px solid #fecaca;
      font-size: 0.95rem;
      text-align: center;
    }

    .success-message {
      background: #f0fdf4;
      color: #166534;
      padding: 15px;
      border-radius: 10px;
      margin-bottom: 25px;
      border: 1px solid #bbf7d0;
      font-size: 0.95rem;
      text-align: center;
    }

    @media (max-width: 768px) {
      .signup-header h1 {
        font-size: 2.2rem;
      }
      
      .signup-header p {
        font-size: 1.1rem;
      }
      
      .role-cards {
        flex-direction: column;
        align-items: center;
      }
      
      .role-card {
        width: 100%;
        max-width: 350px;
      }
      
      .signup-form {
        padding: 0 20px 30px;
      }
      
      .form-header h3 {
        font-size: 1.8rem;
      }
    }

    @media (max-width: 480px) {
      .signup-container {
        margin: 10px;
        border-radius: 15px;
      }
      
      .signup-header {
        padding: 40px 15px;
      }
      
      .signup-header h1 {
        font-size: 1.8rem;
      }
      
      .role-selection {
        padding: 30px 15px;
      }
      
      .role-selection h2 {
        font-size: 1.8rem;
      }
      
      .role-card {
        padding: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="signup-container">
    <div class="signup-header">
      <h1>Join Fix Sewa</h1>
      <p>Create your account and start your journey with us. Choose your role and get started today!</p>
    </div>

    <div class="role-selection">
      <h2>Choose Your Role</h2>
      <div class="role-cards">
        <div class="role-card" data-role="customer">
          <div class="role-icon">
            <i class="fas fa-user"></i>
          </div>
          <div class="role-title">Customer</div>
          <div class="role-description">
            Book services, manage appointments, and get professional help for your home needs.
          </div>
        </div>

        <div class="role-card" data-role="worker">
          <div class="role-icon">
            <i class="fas fa-tools"></i>
          </div>
          <div class="role-title">Worker</div>
          <div class="role-description">
            Offer your skills, manage bookings, and grow your business with Fix Sewa.
          </div>
        </div>
      </div>
    </div>

    <!-- Customer Signup Form -->
    <div class="signup-form" id="customer-form">
      <div class="form-header">
        <h3>Customer Registration</h3>
        <p>Create your customer account to start booking services</p>
      </div>

      <form action="/signup" method="POST">
        <input type="hidden" name="role" value="customer">
        
        <div class="form-group">
          <label for="customer-name">
            <i class="fas fa-user"></i> Full Name
          </label>
          <input 
            type="text" 
            name="name" 
            id="customer-name" 
            placeholder="Enter your full name"
            required 
          />
        </div>

        <div class="form-group">
          <label for="customer-email">
            <i class="fas fa-envelope"></i> Email Address
          </label>
          <input 
            type="email" 
            name="email" 
            id="customer-email" 
            placeholder="Enter your email address"
            required 
          />
        </div>

        <div class="form-group">
          <label for="customer-phone">
            <i class="fas fa-phone"></i> Phone Number
          </label>
          <input 
            type="tel" 
            name="phone" 
            id="customer-phone" 
            placeholder="Enter your phone number"
            required 
          />
        </div>

        <div class="form-group">
          <label for="customer-password">
            <i class="fas fa-lock"></i> Password
          </label>
          <input 
            type="password" 
            name="password" 
            id="customer-password" 
            placeholder="Create a strong password"
            required 
          />
        </div>

        <button type="submit" class="submit-btn">
          <i class="fas fa-user-plus"></i> Create Customer Account
        </button>
      </form>

      <div class="form-footer">
        <p>Already have an account? <a href="/login">Sign in here</a></p>
      </div>
    </div>

    <!-- Worker Signup Form -->
    <div class="signup-form" id="worker-form">
      <div class="form-header">
        <h3>Worker Registration</h3>
        <p>Join our team of skilled professionals</p>
      </div>

      <form action="/signup" method="POST">
        <input type="hidden" name="role" value="worker">
        
        <div class="form-group">
          <label for="worker-name">
            <i class="fas fa-user"></i> Full Name
          </label>
          <input 
            type="text" 
            name="name" 
            id="worker-name" 
            placeholder="Enter your full name"
            required 
          />
        </div>

        <div class="form-group">
          <label for="worker-email">
            <i class="fas fa-envelope"></i> Email Address
          </label>
          <input 
            type="email" 
            name="email" 
            id="worker-email" 
            placeholder="Enter your email address"
            required 
          />
        </div>

        <div class="form-group">
          <label for="worker-phone">
            <i class="fas fa-phone"></i> Phone Number
          </label>
          <input 
            type="tel" 
            name="phone" 
            id="worker-phone" 
            placeholder="Enter your phone number"
            required 
          />
        </div>

        <div class="form-group">
          <label for="worker-service">
            <i class="fas fa-tools"></i> Primary Service
          </label>
          <select name="service" id="worker-service" required>
            <option value="">Select your primary service</option>
            <option value="cleaning">House Cleaning</option>
            <option value="painting">Interior Painting</option>
            <option value="electrical">Electrical & Wiring</option>
            <option value="plumbing">Plumbing</option>
            <option value="handyman">Handyman Services</option>
            <option value="moving">Moving Services</option>
            <option value="appliance">Appliance Repair</option>
            <option value="flooring">Floor Installation</option>
          </select>
        </div>

        <div class="form-group">
          <label for="worker-experience">
            <i class="fas fa-star"></i> Years of Experience
          </label>
          <select name="experience" id="worker-experience" required>
            <option value="">Select experience level</option>
            <option value="0-1">0-1 years</option>
            <option value="1-3">1-3 years</option>
            <option value="3-5">3-5 years</option>
            <option value="5-10">5-10 years</option>
            <option value="10+">10+ years</option>
        </select>
        </div>

        <div class="form-group">
          <label for="worker-password">
            <i class="fas fa-lock"></i> Password
          </label>
          <input 
            type="password" 
            name="password" 
            id="worker-password" 
            placeholder="Create a strong password"
            required 
          />
        </div>

        <button type="submit" class="submit-btn">
          <i class="fas fa-tools"></i> Create Worker Account
        </button>
      </form>

      <div class="form-footer">
        <p>Already have an account? <a href="/login">Sign in here</a></p>
      </div>
    </div>
  </div>

  <script>
    // Role selection functionality
    const roleCards = document.querySelectorAll('.role-card');
    const customerForm = document.getElementById('customer-form');
    const workerForm = document.getElementById('worker-form');

    roleCards.forEach(card => {
      card.addEventListener('click', function() {
        // Remove selected class from all cards
        roleCards.forEach(c => c.classList.remove('selected'));
        
        // Add selected class to clicked card
        this.classList.add('selected');
        
        // Show appropriate form
        const role = this.dataset.role;
        if (role === 'customer') {
          customerForm.classList.add('active');
          workerForm.classList.remove('active');
        } else if (role === 'worker') {
          workerForm.classList.add('active');
          customerForm.classList.remove('active');
        }
      });
    });

    // Auto-select customer by default
    document.querySelector('[data-role="customer"]').click();
  </script>
</body>
</html>
